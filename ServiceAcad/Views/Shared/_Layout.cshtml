<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <!-- Shared Header -->
    <div class="header">
        <div class="logo-container">
            <img src="~/images/logo.png" alt="Logo" class="logo">
            <span class="service-academy">Service Academy</span>
        </div>
        <nav class="nav-links">
            <a asp-action="Index">Home</a>
            <a asp-action="ListPrograms">Programs</a>
            <a asp-action="Contact">Contact Us</a>
            <a asp-action="FAQs">FAQs</a>
        </nav>
        <div class="nav-right">
            <a asp-controller="Account" asp-action="Login">Login</a>
            <a asp-controller="Account" asp-action="Register">Register</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Shared Footer -->
    <div class="footer">
        <p>&copy; 2024 Batangas State University. All rights reserved.</p>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
