@{
    ViewBag.Title = "Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="management-container">
    <h2 class="page-title">Management</h2>

    <div class="management-section">
        <!-- User Management Section -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">User Management</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Manage users including students, instructors, and administrators.</p>
                <a href="#" class="btn btn-primary">Manage Users</a>
            </div>
        </div>

        <!-- Course Management Section -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Course Management</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Add, update, and delete courses, and manage course content.</p>
                <a href="#" class="btn btn-primary">Manage Courses</a>
            </div>
        </div>

        <!-- Account Management Section -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Account Management</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Manage and update account settings.</p>
                <a href="#" class="btn btn-primary">Manage Accounts</a>
            </div>
        </div>
    </div>
</div>
