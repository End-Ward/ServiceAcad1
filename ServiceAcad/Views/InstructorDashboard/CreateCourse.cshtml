@{
    ViewData["Title"] = "Create & Manage Courses";
    Layout = "~/Views/Shared/_LayoutInstructor.cshtml";
}

<div class="container mt-4">
    <h2>Create and Manage Courses</h2>

    <div class="row mt-5">
        <!-- Form to Create a New Course -->
        <div class="col-md-6">
            <h4>Create a New Course</h4>
            <form>
                <div class="mb-3">
                    <label for="courseName" class="form-label">Course Name</label>
                    <input type="text" class="form-control" id="courseName" placeholder="Enter course name">
                </div>
                <div class="mb-3">
                    <label for="courseDescription" class="form-label">Course Description</label>
                    <textarea class="form-control" id="courseDescription" rows="3" placeholder="Enter course description"></textarea>
                </div>
                <div class="mb-3">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate">
                </div>
                <div class="mb-3">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate">
                </div>
                <button type="submit" class="btn btn-primary">Create Course</button>
            </form>
        </div>

        <!-- List of Existing Courses -->
        <div class="col-md-6">
            <h4>Manage Existing Courses</h4>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Advanced Programming Concepts
                    <span>
                        <a href="#" class="btn btn-sm btn-info">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Introduction to Databases
                    <span>
                        <a href="#" class="btn btn-sm btn-info">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Web Development Bootcamp
                    <span>
                        <a href="#" class="btn btn-sm btn-info">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </span>
                </li>
            </ul>
        </div>
    </div>

    <hr class="mt-5">

    <!-- Section for Content Upload and Organization -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h4>Upload Course Content</h4>
            <form>
                <div class="mb-3">
                    <label for="contentTitle" class="form-label">Content Title</label>
                    <input type="text" class="form-control" id="contentTitle" placeholder="Enter content title">
                </div>
                <div class="mb-3">
                    <label for="contentType" class="form-label">Content Type</label>
                    <select class="form-control" id="contentType">
                        <option>Lecture Video</option>
                        <option>Assignment</option>
                        <option>Quiz</option>
                        <option>Reading Material</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="fileUpload" class="form-label">Upload File</label>
                    <input type="file" class="form-control" id="fileUpload">
                </div>
                <button type="submit" class="btn btn-success">Upload Content</button>
            </form>
        </div>
    </div>
</div>
