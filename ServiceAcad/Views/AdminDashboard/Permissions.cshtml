@{
    ViewBag.Title = "Permissions";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="permissions-container">
    <h2 class="page-title">Permissions</h2>

    <div class="permissions-section">
        <!-- Certification Approval Section -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Certification Approvals</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Review and approve pending certification requests.</p>
                <a href="#" class="btn btn-primary">View Pending Approvals</a>
            </div>
        </div>

        <!-- Role-Based Permissions Section -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Role-Based Permissions</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Define and manage user roles and access permissions.</p>
                <a href="#" class="btn btn-primary">Manage Permissions</a>
            </div>
        </div>
    </div>
</div>
